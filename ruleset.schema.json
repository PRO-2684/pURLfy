{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ruleset Schema",
    "type": "object",
    "patternProperties": {
        "^[^/]+/$": {
            "$ref": "#/definitions/recurse"
        },
        "^[^/]+$": {
            "$ref": "#/definitions/rule"
        },
        "^/.+/$": {
            "$ref": "#/definitions/recurse"
        },
        "^/.+[^/]$": {
            "$ref": "#/definitions/rule"
        }
    },
    "definitions": {
        "rule": {
            "type": "object",
            "title": "Rule",
            "description": "A single rule.",
            "properties": {
                "mode": {
                    "type": "string",
                    "title": "Mode",
                    "description": "Mode of the rule.",
                    "enum": [
                        "white",
                        "black",
                        "param",
                        "regex",
                        "redirect",
                        "visit",
                        "lambda",
                        "headers",
                        "continue"
                    ]
                },
                "description": {
                    "type": "string",
                    "title": "Description",
                    "description": "Description of the rule."
                },
                "author": {
                    "type": "string",
                    "title": "Author",
                    "description": "Author of the rule."
                },
                "std": {
                    "type": "boolean",
                    "title": "Standard",
                    "description": "Whether the URL search string shall be deemed standard."
                },
                "params": {
                    "type": "array",
                    "title": "Params",
                    "description": "List of parameters to be kept, removed or processed.",
                    "items": {
                        "type": "string"
                    }
                },
                "acts": {
                    "type": "array",
                    "title": "Acts",
                    "description": "List of actions to be performed.",
                    "items": {
                        "type": "string"
                    }
                },
                "regex": {
                    "type": "array",
                    "title": "Regex",
                    "description": "List of regular expressions to be matched.",
                    "items": {
                        "type": "string"
                    }
                },
                "replace": {
                    "type": "array",
                    "title": "Replace",
                    "description": "List of strings to replace matched parts.",
                    "items": {
                        "type": "string"
                    }
                },
                "headers": {
                    "type": "object",
                    "title": "Headers",
                    "description": "The headers to use for web requests.",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "lambda": {
                    "type": "string",
                    "title": "Lambda",
                    "description": "The lambda function to use for processing."
                },
                "continue": {
                    "type": "boolean",
                    "title": "Continue",
                    "description": "Whether to continue processing the URL."
                }
            },
            "required": [
                "mode",
                "description",
                "author"
            ],
            "additionalProperties": false
        },
        "recurse": {
            "type": "object",
            "patternProperties": {
                "^[^/]+/$": {
                    "$ref": "#/definitions/recurse"
                },
                "^[^/]+$": {
                    "$ref": "#/definitions/rule"
                },
                "^/.+/$": {
                    "$ref": "#/definitions/recurse"
                },
                "^/.+[^/]$": {
                    "$ref": "#/definitions/rule"
                }
            }
        }
    },
    "additionalProperties": false
}
